{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "comma-dangle": "off",
    "camelcase": "off",
    "operator-linebreak": "off",
    "import/extensions": [
      1,
      {
        "js": "always",
        "json": "always"
      }
    ],
    "arrow-body-style": "off",
    "consistent-return": "off",
    "linebreak-style": "off",
    "quotes": "off",
    "class-methods-use-this": "off",
    "indent": "off"
  },
  "ignorePatterns": ["dist/", "build/"]
}
